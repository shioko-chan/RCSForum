.refresh-box {
    position: fixed;
    right: 20rpx;
    bottom: 200rpx;
    height: 80rpx;
    width: 80rpx;
    background-color: rgba(220, 220, 220, 0.8);
    border-radius: 25%;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10001;
}

.refresh-button {
    height: 75rpx;
    width: 75rpx;
}